@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row justify-content-md-center shadow-lg border mt-5 p-5 q-register-form position-relative">

        <div class="col-md-4">
            <h3>Your the CEO of a company!</h3>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info border mt-4">Register</button>
        </div>

        <div class="col-md-4">
            <h3>Register your company now.</h3>
            <hr />
            <div class="form-group">
                <label asp-for="Input.CompanyName"></label>
                <input asp-for="Input.CompanyName" class="form-control" />
                <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfEstablishment">Date of establishment of the company</label>
                <input type="date" asp-for="Input.DateOfEstablishment" class="form-control" />
                <span asp-validation-for="Input.DateOfEstablishment" class="text-danger"></span>
            </div>
        </div>

    </div>
</form>


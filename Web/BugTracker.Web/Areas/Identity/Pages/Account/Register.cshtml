@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row justify-content-md-center shadow-lg border mt-5 p-5 q-register-form position-relative">
        @if (!this.Model.WantToRegisterAsCompany)
        {
            <div class="col-md-4">
                <h3>@ViewData["Title"]</h3>
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="Input.Company" class="custom-select" aria-label="Default select example">
                        <option selected>Select the company you will work for</option>
                        <option value="OneBitSoftware">OneBit Software</option>
                        <option value="XSSoftware">XS Software</option>
                        <option value="SoftUni">SoftUni</option>
                    </select>
                    <span asp-validation-for="Input.Company" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                    <label class="form-check-label" for="flexCheckChecked">
                        <strong>After register you will need to wait for your confirmation from the company.</strong>
                    </label>
                </div>
                <button type="submit" class="btn btn-info border mt-4">Register</button>
            </div>

            <div class="col-md-4 col-md-offset-2">
                <section>
                    <h3>Your the CEO of a company</h3>
                    <h4>Register your company now.</h4>
                    <hr />
                    <a asp-area="Identity" asp-page="/Account/Register" asp-route-registerCompany="@true" class="btn btn-block btn-info ">Register Company</a>
                </section>
            </div>
        }
        else if (this.Model.WantToRegisterAsCompany)
        {
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info q-link-return"><i class="fas fa-arrow-left"></i> Return</a>
            <div class="col-md-4">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-info">Register</button>
            </div>

            <div class="col-md-4 ">
                <h4>Company Information.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.CompanyName"></label>
                    <input asp-for="Input.CompanyName" class="form-control" />
                    <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.DateOfEstablishment">Date of establishment of the company</label>
                    <input type="date" asp-for="Input.DateOfEstablishment" class="form-control" />
                    <span asp-validation-for="Input.DateOfEstablishment" class="text-danger"></span>
                </div>
            </div>

        }

    </div>
</form>


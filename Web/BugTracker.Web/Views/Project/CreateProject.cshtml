@using BugTracker.Web.ViewModels.InputModels

@model CreateProjectInputModel

<partial name="_AlertPartial"> 

<div class="container mt-5 ml-5">

    <span class="h2">New project</span>

    <form class="mt-5" method="post" asp-controller="Project" asp-action="CreateProject">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <label for="name" class="col-1 col-form-label">Name *</label>
            <div class="col-4">
                <input type="text" asp-for="ProjectName" class="form-control" id="name" placeholder="project name">
            </div>
        </div>
        <div class="mt-5 mb-5">
            <p>
                <a class="" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    <i class="fas fa-chevron-down"></i>  ADVANCED SETTINGS
                </a>
            </p>
            <div class="wrapper center-block">
                <div class="collapse" id="collapseExample">
                    <div class="form-group row">
                        <label for="name" class="col-1 col-form-label">Description</label>
                        <div class="col-4">
                            <input type="text" asp-for="Description" class="form-control" id="name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="public" class="col-1 col-form-label">Public</label>
                        <div class="col-4">
                            <input class="form-check-label mt-2" type="checkbox" asp-for="IsPublic" id="public" checked>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2 d-block"> <i class="fas fa-check"></i> Create</button>
    </form>
</div>



@using BugTracker.Common

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cssUtilities.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/projectNav.css" asp-append-version="true" />
    @RenderSection("CssFile", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container col-lg-12">
                <div class="dropdown">
                    @if (this.SignInManager.IsSignedIn(this.User))
                    {
                        <a class="navbar-brand " href="#" id="dropdownNavMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@GlobalConstants.SystemName <i class="fas fa-angle-down"></i></a>
                        <ul class="dropdown-menu  dropdown-menu-xl-right mt-sm-4 " aria-labelledby="dropdownNavMenu">
                            <li class="nav-item p-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="CreateProject" title="createProject">Create Project</a>
                            </li>
                            <li class="nav-item p-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="MyProjects" title="myProjects">My Projects</a>
                            </li>
                        </ul>
                    }
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    @if (this.SignInManager.IsSignedIn(this.User))
                    {
                        <form class="form-inline d-flex justify-content-center md-form form-sm active-cyan-2 mt-2 ">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-info my-2 my-sm-0" type="submit">
                                Search
                                <i class="fas fa-search" aria-hidden="true"></i>
                            </button>
                        </form>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="wrapper">
        <nav id="sidebar">
            <ul class="list-unstyled components">
                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="fas fa-exclamation-circle f-right"></i> &nbsp;  Overview</a>
                </li>
                <li>
                    <a class="q-nav-link" asp-controller="ProjectOptions" asp-action="AllOpenTasks">&nbsp; <i class="far fa-folder-open"></i>&nbsp; All open</a>
                </li>
                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="fas fa-tasks"></i>&nbsp;&nbsp; Assigned to me</a>
                </li>
                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="fas fa-tasks"></i>&nbsp;&nbsp; Created by me</a>
                </li>
                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="fas fa-tasks"></i>&nbsp;&nbsp; Latest activity</a>
                </li>
                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="fas fa-tasks"></i> &nbsp; Recently created</a>
                </li>

                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="far fa-calendar-alt"></i> &nbsp;  Time sheet</a>
                </li>
                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="fas fa-sticky-note"></i> &nbsp;  Notes</a>
                </li>
                <li>
                    <a class="q-nav-link" asp-controller="ProjectOptions" asp-action="Members">&nbsp; <i class="fas fa-users"></i> &nbsp;  Members</a>
                </li>
                <li>
                    <a class="q-nav-link" href="#">&nbsp; <i class="fas fa-cogs"></i> &nbsp;  Project settings</a>
                </li>

            </ul>


        </nav>
        <div id="content">
            <partial name="_CookieConsentPartial" />
            @this.RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>



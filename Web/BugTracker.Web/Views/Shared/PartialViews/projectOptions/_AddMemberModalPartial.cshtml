@using BugTracker.Data.Enums

<!-- Modal -->
<div id="memberModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"> <i class="fas fa-user"></i> &nbsp;Add Member</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="ProjectOptions" asp-action="AddNewMember">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail">Email</label>
                            <input type="email" class="form-control" name="email" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputRole">Roles</label>
                            <select name="role" id="inputRole" class="form-control">
                                <option disabled selected>Role...</option>
                                <option value="@GlobalConstants.ManagerRoleName">@GlobalConstants.ManagerRoleName</option>
                                <option value="@GlobalConstants.ContributorsRoleName">@GlobalConstants.ContributorsRoleName</option>
                                <option value="@GlobalConstants.ReaderRoleName">@GlobalConstants.ReaderRoleName</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputGroups">Groups</label>
                            <input type="text" class="form-control" id="inputGroups" placeholder="Groups">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputStatus">Status</label>
                            <select name="status" id="inputStatus" class="form-control">
                                <option disabled selected>Status...</option>
                                <option value="@MemberStatus.Active">Active</option>
                                <option value="@MemberStatus.Inactive">Inactive</option>
                                <option value="@MemberStatus.Vacation">Vacation</option>
                                <option value="@MemberStatus.DepartFrom">Leave</option>
                            </select>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Add New Member</button>
                </form>
                <form method="post" asp-controller="ProjectOptions" asp-action="AddMember">
                    <div class="form-group col-md-6">
                        <label for="inputEmail">Email</label>
                        <input type="email" class="form-control" name="email" id="inputEmail" placeholder="Email">
                    </div>
                    <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Add Member</button>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .modal-backdrop {
        width: 100%;
        height: 100%;
    }
</style>
